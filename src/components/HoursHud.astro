---
const data = [
  { day: "Today", open: false, reason: "Holiday" },
  { day: "Tuesday", open: true },
  { day: "Wednesday", open: false },
  { day: "Thursday", open: false, reason: "Holiday" },
];
---

<div
  class="grid grid-cols-4 gap-1 overflow-hidden rounded-sm capitalize leading-none [&>div>div]:p-1"
>
  {
    data.map((item) => (
      <div>
        <div class="border-y-4 truncate border-neutral-800 bg-primary-600 font-semibold leading-tight text-white text-xs sm:text-sm">
          {item.day}
        </div>
        <div
          class={`h-full ${item.open ? "bg-teal-700 text-green-300" : "bg-orange-700 text-orange-300"} text-sm md:text-lg`}
        >
          <span class="block">{item.open ? "Open" : "Closed"}</span>
          {item.open && (
            <span class="pr-3 text-xs  italic">9am ~ 5pm</span>
          )}
          {!item.open && item.reason && (
            <span class="block text-xs">{item.reason}</span>
          )}
        </div>
      </div>
    ))
  }
</div>
